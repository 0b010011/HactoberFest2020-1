#include <stdio.h>

int main()
{
  int x;
  printf("How many lines for printing Star pattern in simple way?");
  scanf("%d",&x);
  for(int i=0;i<x;i++)
  {
    for(int j=0;j<i;j++)
      {
        printf("*");
      }
    printf("\n");
  }
  return 0;
}
